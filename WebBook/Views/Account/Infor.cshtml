@using WebBook.Common
@using WebBook.Data
@* @model WebBook.ViewModels.RegisterVM *@
@model WebBook.Models.ApplicationUser

@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<link rel="stylesheet" type="text/css" href="~/client/styles/single_styles.css">
<link rel="stylesheet" type="text/css" href="~/client/styles/single_responsive.css">


<div class="container single_product_container" style="margin-top: 130px">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->
            <div class="row" style="margin-bottom: 15px">
                <div style="border-bottom: 1px solid #ced4da;">
                    <h5>THÔNG TIN TÀI KHOẢN</h5>
                </div>
            </div>
            <form method="post"  enctype="multipart/form-data" asp-controller="Account" asp-action="Infor">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Họ tên</label>
                            <input asp-for="Id" type="hidden" class="form-control"/>
                            <input asp-for="FullName" type="text" class="form-control" placeholder="Họ tên"  />
                            <span asp-validation-for="FullName" class="checkout_validation"></span>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email"  type="email" class="form-control" placeholder="Nhập email" />
                            <span asp-validation-for="Email" class="checkout_validation"></span>
                        </div>
                        <div class="form-group">
                            <label>Username</label>
                            <input asp-for="UserName" disabled type="text" class="form-control" placeholder="User name" />
                            <span asp-validation-for="UserName" class="checkout_validation"></span>
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="PhoneNumber" class="checkout_validation"></span>
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ</label>
                            <input asp-for="Address" type="text" class="form-control" placeholder="Nhập địa chỉ" />
                            <span asp-validation-for="Address" class="checkout_validation"></span>
                        </div>
                        <div class="form-group">
                            <button style="cursor: pointer;  margin-bottom: 10px" type="submit" class="btn btn-danger">Lưu</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>