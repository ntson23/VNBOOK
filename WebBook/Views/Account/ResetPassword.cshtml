@using WebBook.Common
@using WebBook.Data
@model WebBook.ViewModels.ResetPasswordVM


@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<link rel="stylesheet" type="text/css" href="~/client/styles/single_styles.css">
<link rel="stylesheet" type="text/css" href="~/client/styles/single_responsive.css">


<div class="container single_product_container" style="margin-top: 130px">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->


            <div class="row" style="margin-bottom: 15px">
                <div style="border-bottom: 1px solid #ced4da;">
                    <h5>ĐẶT LẠI MẬT KHẨU</h5>
                </div>
            </div>
            <form type="POST" enctype="multipart/form-data" asp-controller="Account" asp-action="ResetPassword">
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <input type="hidden" asp-for="Code" />
                            <label>Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email của tài khoản" />
                            <span asp-validation-for="Email" class="checkout_validation"></span>
                        </div>
                        <div class="form-group">                            <label>Mật khẩu</label>
                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="Nhập mật khẩu mới" />
                            <span asp-validation-for="NewPassword" class="checkout_validation"></span>
                        </div>
                        <div class="form-group">
                            <label>Nhập lại mật khẩu</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu" />
                            <span asp-validation-for="ConfirmPassword" class="checkout_validation"></span>
                        </div>
                        <div class="form-group">
                            <button style="cursor: pointer; margin-bottom: 10px" type="submit" class="btn btn-danger">Reset</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>